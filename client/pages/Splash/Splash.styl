body.body-splash
  background-color white
  text-align center

  .splash-header
    font-size: 3.5em
    font-weight: normal
    margin-top: 100px
  .splash-subheader
    font-size: 1.6em
    font-weight: 300
  .splash-logo
    margin-top 30px
  .splash-logo-line
    width: 100px
    background: #979797
    height: 1px
    transform: rotate(45deg)
    margin: 18px 0 0 60%
  .splash-logo-annotation
    margin: 50px 0 0 47%
  .splash-button
    display: block
    padding: 10px 40px
    background: black
    width: 200px
    margin: 50px auto 100px
    border-radius: 30px
  .splash-button
    color: white
