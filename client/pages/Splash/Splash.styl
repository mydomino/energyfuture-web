body.body-splash
  text-align center
  overflow hidden
  .splash-container
    margin 15px
  .page-splash
    position fixed
    background-color #242424
    background-color rgba(0,0,0,0.75)
    top 0
    left 0
    right 0
    bottom 0
    z-index 1200
    color #00ccff
  .splash-header
    font-size 3.5em
    font-weight normal
    margin-top 20px
    line-height 1
  .splash-subheader
    font-size 1.6em
    font-weight 400
    margin 10px 0
    color #ffffff
  .splash-logo
    margin-top 60px
    width 50vw
    max-width 300px
  .splash-cta
    .splash-button
      background #dd5347
      font-size 1.2em
      font-weight bold
      margin 60px auto 0
      padding 1em
      color white
      border-radius 5px
    p
      color white
      font-size 0.9em
