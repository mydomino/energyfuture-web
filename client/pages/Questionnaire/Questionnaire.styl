.guide-module-questionnaire
  margin-top 60px
  text-align center
  .questionnaire-header
    color rgba(#000000, 0.87)
    text-align left
  .questionnaire-progress-container
    position relative
    width 100%
    background #D8D8D8
    height 20px
    border-radius 10px
  .questionnaire-progress-bar
    position absolute
    width 137px
    background rgba(#272B2C, 0.5)
    top 0
    left 0
    height 20px
    border-radius 10px
  .questionnaire-form
    margin-top 40px
    width 80%
    display inline-block
    box-shadow 0 0 14px 1px rgba(0,0,0,0.5)
    border-radius 20px

