.footprint-header
  padding 0 4em

  h2
    font-size 33px
    font-weight 100
    margin-bottom 5px

  p
    font-size 16px
    font-weight 400
    margin-top 0
    color rgba(39,43,44,0.4)

.footprint-content
  background-color #fff
  border-radius 30px
  padding 2em 4em

  h2
    font-variant small-caps
    margin-bottom 5px

  .sub-heading
    font-size 16px
    font-weight 400
    margin-top 0
    color rgba(39,43,44,0.4)

  .did-you-know-content
    font-size 20px

  .about-you-row
    margin-top 10px
    .about-you-label
      font-weight bolder

    .about-you-description
      margin-left 5px

ul.badge-list
  width 100px
  list-style none

  .go-getter
    color rgba(193,165,219,100)


  .most-dedicated
    color rgba(94,152,219,100)

  li
    display inline
    margin-right 60px

    .badge
      position relative

    &:before
      content "\002B22"
      font-size 108px

  .hex:before
    content " "
    width 0 height 0
    border-bottom 30px solid #6C6
    border-left 52px solid transparent
    border-right 52px solid transparent
    position absolute
    top -30px

  .hex
    margin-top 30px
    width 104px
    height 60px
    background-color #6C6
    position relative

  .hex:after
    content ""
    width 0
    position absolute
    bottom -30px
    border-top 30px solid #6C6
    border-left 52px solid transparent
    border-right 52px solid transparent
