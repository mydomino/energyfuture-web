@require '../../css/mixins/colors'

.page-footprint
  .dropdown-component
    select
      color #50E3C2
  &:before
    color #50E3C2

.footprint-header
  margin-top 2em

  h2
    font-size 33px
    font-weight 100
    margin-bottom 5px

  p
    font-size 16px
    font-weight 400
    margin-top 0
    color rgba(39,43,44,0.4)

.footprint-content
  margin-top 2em

  h3
    text-transform uppercase
    font-weight bold
    margin-bottom 5px
    letter-spacing 0.2em

  .sub-heading
    font-size 16px
    font-weight 400
    margin-top 0
    color rgba(39,43,44,0.4)

  .guides
    width 70%
    overflow hidden

.footprint-question
  margin-top 2.5em
  cursor: pointer
  color rgb(183, 183, 183)

  .footprint-question-text
    vertical-align top
    margin-left 6px
    font-size 13px
    border-bottom: 1px solid
    padding-top 3px

  .footprint-question-icon
    font-size 16px

hr.h-divider
  margin 3em 0
  height 1px
  border-style none
  background linear-gradient(1deg, rgba(0,0,0,0), rgba(39,43,44,0.3), rgba(0,0,0,0))

.footprint-sidebar
  float right
  width 260px
  text-align center
  font-size 0.9em
  color #686868
  h3
    font-weight bold
  .location
    font-size 0.9em
    p a
      display block

.modal-content-expanded
  .footprint-modal-content
    text-align left
    padding 110px
    h2
      font-size 2em
      font-weight bold
    p
      font-size 1.3em
