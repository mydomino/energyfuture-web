@require '../../css/mixins/colors'

.page-footprint
  .dropdown-component
    select
      color #50E3C2
  &:before
    color #50E3C2

.footprint-header
  margin-top 2em

  h2
    font-size 33px
    font-weight 100
    margin-bottom 5px

  p
    font-size 16px
    font-weight 400
    margin-top 0
    color rgba(39,43,44,0.4)

.footprint-content
  margin-top 2em

  h3
    text-transform uppercase
    font-weight bold
    margin-bottom 5px
    letter-spacing 0.2em

  .sub-heading
    font-size 16px
    font-weight 400
    margin-top 0
    color rgba(39,43,44,0.4)

  .guides
    width 60%
    overflow hidden

hr.h-divider
  margin-top 3.5em
  height 1px
  border-style none
  background linear-gradient(1deg, rgba(0,0,0,0), rgba(39,43,44,0.3), rgba(0,0,0,0))
