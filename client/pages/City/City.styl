.body-city
    margin 0

    .container
        background #fff

.page-city .container-padding
    margin 0
    padding 0
    width 100%

.city-container

    h2
        color rgba(247,104,121,1)
        font-size 3em
        font-weight 600
        margin .5em 0
        text-align left

    em
        color rgba(247,104,121,1)
        font-style normal
        font-weight 600

    p
        font-size 1.7em
        font-weight 400
        line-height 1.4em
        margin 1em 0

    p.city-page-button
        margin 1.5em 0

    a.city-get-started
        background rgba(247,104,121,1)
        border-radius 1.25em
        color #fff
        font-size 1em
        line-height 1
        margin 4em 0
        padding .5em 1.5em
        text-decoration none

.city-container-head
    background #4EC7DC
    color #fff

    .city-head
        margin 0 auto
        padding .75em 0
        width 1024px

        h1
            background url("../img/logo-header-small.png") no-repeat 0 50%
            font-size 3em
            font-weight 300
            line-height 1em
            margin 0
            padding-left 50px
            float left
            width 50%

        .city-domino-count
            background url("../img/counter-header.png") no-repeat 100% 0
            font-size 1.2em
            font-weight 600
            float right
            line-height 1.3em
            margin 0
            padding .2em 184px .2em 0
            width 50%
            text-align right
            text-transform uppercase

    .city-head:after
        content " "
        display block
        height 0
        visibility hidden
        clear both

.city-container-map
    background #fff
    color #222
    padding 325px 0 50px

    &.electric-car-map
        background url("../img/evs-map.png") no-repeat 50% 50%
        background-size cover

    &.solar-map
        background url("../img/solar-map.png") no-repeat 50% 50%
        background-size cover

    &.clean-power-map
        background url("../img/clean-power-option-map.png") no-repeat 50% 50%
        background-size cover

    &.thermostats-map
        background url("../img/thermostats-map.png") no-repeat 50% 50%
        background-size cover

    .city-map
        margin 0 auto
        width 1024px

        .city-map-tabs
            //display inline-block
            margin 0 auto
            width 744px
            &:hover
                cursor pointer

            .city-map-tab
                float left
                height 107px
                margin-bottom 2px
                padding 15px 10px 25px
                background-color #F8F8F8
                width 186px
                &:hover
                    background-color #4ec7dc
                &.active
                    background-color #8dd8e2

                .city-map-tab-image
                    display block
                    margin 0 auto
                    width 111px

                .city-map-tab-text
                    margin 4px 0 0
                    text-align center
                    font-size .9em
                    line-height 1.2em
                    color #656B6F

        .city-map-tabs:after
            content " "
            display block
            height 0
            visibility hidden
            clear both

        .city-map-image-mask
            margin 0 auto
            padding 15px 25px
            width 744px
            height 161px
            background-color rgba(122, 213, 228, .85)

            .city-map-image-text
                color white
                font-size 1.2em
                font-weight bold
                text-align center
                text-shadow 1px 1px 2px rgba( 0, 0, 0, .6 )

            .city-map-image-button
                display block
                margin 0 auto
                background-color: #F76879
                border none
                border-radius 20px
                padding 5px 20px
                font-size 1.3em
                color #FFFFFF

.city-container-data
    background #4EC7DC
    color #fff
    padding 60px 0

    .city-data
        margin 0 auto
        width 1024px

        .city-data-figure
            background url("../img/city-page-stats.png") no-repeat 0 50%
            float right
            min-height 452px
            text-indent -9999px
            width 400px

        .city-data-text
            float left
            width 624px

    .city-data:after
        content " "
        display block
        height 0
        visibility hidden
        clear both

.city-container-action
    background #4EC7DC
    color #fff
    padding 60px 0

    .city-action
        margin 0 auto
        width 1024px

.city-container-partners
    background #fff
    color #222
    padding 60px 0

    .city-partners
        margin 0 auto
        width 1024px

        h2
            color #4EC7DC

        .city-partner-logos
            background url("../img/city-page-partners.png")
            height 299px
            margin 30px auto
            text-indent -9999px
            width 876px

.city-container-disclaimer
    background #fff
    color #666
    padding 60px 0

    .city-disclaimer
        margin 0 auto
        width 1024px

        p
            font-size 1em

        a
            color #999
