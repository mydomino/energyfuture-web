.guide-module-tips
  .tip-items
    margin-top 20px
  .tip
    float left
    width 30%
    padding 1em
    margin-left 2%
    border 1px solid #979797
    border-radius 30px
    color #272B2C
    &:first-child
      margin 0
  .tip-content
    margin 0
    font-size 16px
  .tip-profile
    margin-top 30px
  .tip-profile-image
    float left
    border-radius 25px 25px
  .tip-profile-details
    float left
    margin-left 15px
  .tip-display-name
    font-weight bold
    font-size 17px
  .tip-location, .tip-location-without-profile
    font-size 14px
  .tip-location-without-profile
    margin-top 15px
