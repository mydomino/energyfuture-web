.guide-module-tips
  .tip-items
    margin-top 20px
  .tip
    float left
    min-height 150px
    width 30%
    padding 1em
    margin 0 0 2% 2%
    border 1px solid #979797
    border-radius 30px
    color #272B2C
    &:nth-child(3n+1)
      margin-left 0
  .clear
    clear both
  .tip-content
    margin 0
    font-size 16px
  .tip-profile
    margin-top 30px
  .tip-profile-image
    float left
    border-radius 25px 25px
    width 50px
    height 50px
  .tip-profile-details
    float left
    margin-left 15px
  .tip-display-name
    font-weight bold
    font-size 17px
  .tip-location, .tip-location-without-profile
    font-size 14px
  .tip-location-without-profile
    margin-top 15px
    text-align right
    color rgba(0,0,0,0.5)
