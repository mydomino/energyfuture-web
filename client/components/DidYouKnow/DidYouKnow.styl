/*
  90% width on the main content
  5% each on the prev/next buttons
*/
.did-you-know
  width 90%
  margin 0 auto
  font-size 24px
  line-height 33px
  text-align center

.slick-prev { left: -5%; margin-top: -1.2em; font-size 2em; width: 5%; height: auto;}
.slick-prev:before { content: "\2039"; color: #979797; font-size 1.5em; opacity: 1;}

.slick-next { right: -7%; margin-top: -1.2em; font-size 2em; width: 5%; height: auto;}
.slick-next:before { content: "\203A"; color: #979797; font-size 1.5em; opacity: 1;}

.slick-prev.slick-disabled:before, .slick-next.slick-disabled:before { opacity: 1; }
