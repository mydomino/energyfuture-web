.map
  height 500px
  width 100%

.map-search-tooltip
  span.map-search-tooltip-average-rating, span.map-search-tooltip-average-rating span {
    display: block;
    background: url('../img/rating-stars.png') 0 -17px repeat-x;
    width: 80px;
    height: 16px;
  }

  span.map-search-tooltip-average-rating span {
    background-position: 0 0;
  }

  ul
    padding-left 0
    li
      color rgba(100,100,100,1)
      list-style-type: none
      font-style normal
      padding-top 2px
      &.heading
        padding-bottom: 8px
        font-size 21px
        line-height 1.1em

      &.address
        font-size 16px

.leaflet-popup-content
  padding 5px 15px 5px 15px !important
  background: rgba(255, 255, 255, 0.3)
