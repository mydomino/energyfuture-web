.footer
  background #fff
  color #999
  line-height 1.4em
  padding 2em 4em
  font-size 0.9em
  text-align center

  .col
    /* margin-bottom 20px */

  a
    color #999
    text-decoration underline
    -webkit-transition all .5s ease;
    -moz-transition all .5s ease;
    -o-transition all .5s ease;
    transition all .5s ease;

  p
    margin 0

  a:hover
    color #111

  .col2
    .footer-logo
      height 63px
      width 65px
      margin 0 auto

  .col3
    .footer-logo
      display none
      height 25px
      width 106px
      background-position center right
      margin-bottom 0.3em
    p
      display inline-block

.footer:after
  content ""
  display table
  clear both

.footer-logo
  background-image url(../img/logo.png)
  background-size 189px 63px
  background-repeat no-repeat
  background-position top left
  display inline-block

@media (min-width: 560px)
  .footer
    .col1
      float left
      width 40%
      text-align left

    .col2
      float left
      width 20%

    .col3
      float right
      width 40%
      text-align right

      .footer-logo
        display block
