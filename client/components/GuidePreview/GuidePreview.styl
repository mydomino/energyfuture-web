*/

.guide-preview.small
  width 115px
  height 175px
  margin 0 25px 25px 0

  .guide-preview-content
    top 70px
    font-size 0.7em
    background linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1))

  .guide-preview-title
    position absolute
    bottom 10px
    left 0
    margin 0
    padding 0 10px

  .guide-preview-summary
    display none

  .guide-preview-status
    width 90px
    height 40px
    padding-top 13px
    right -30px

    &:before
      font-size 18px

    .fa
      font-size 1.5em
