/*
pageWidth = 1024px
guideWidth = 300px
guideBorder = guideWidth / 10
spacingX = ((pageWidth - (3 * guideWidth)) / 2)
spacingY = 43px
*/
pageWidth = 1024px
guideWidth = 220px
guideBorder = guideWidth / 10
spacingX = ((pageWidth - (4 * guideWidth)) / 3)
spacingY = 30px

.page-guides .container-padding
  overflow auto

.guide-preview
  border 4px solid #000
  width guideWidth
  height 350px
  border-radius guideBorder
  position relative
  margin-right spacingX
  margin-bottom spacingY
  float left
  background-color #fff
  background-repeat no-repeat
  background-position top center
  background-size cover
  cursor pointer

.guide-preview-impact-score
  position absolute
  bottom 0
  left 10px

  .impact-text
    margin-left 10px
    text-transform capitalize
    color #7BD1C0
    display inline-block

.guide-preview-content
  position absolute
  top 175px
  left 0
  right 0
  bottom 0
  border-radius 0 0 guideBorder - 3 guideBorder - 3
  background-color #242424
  background-color rgba(0,0,0,0.6)
  text-align left
  padding 10px
  color #fff

.guide-preview-recommended
  position absolute
  top 30px
  right 0
  padding 5px 10px 5px 15px
  font-size 0.8em
  background-color #000
  border-radius 10px 0 0 10px
  color #fff
  text-transform uppercase
  font-family 'Montserrat'
  letter-spacing 0.2em

.guide-preview-title
  font-weight 400
  color #fff
  font-size 1.3em
  line-height 1.3em
  margin 5px 0 10px

.guide-preview-summary
  color #fff
  color rgba(255, 255, 255, .7)
  font-size .9em
  margin 10px 0

.guide-preview-row-end
  margin-right 0

.guide-preview-status
  position absolute
  top 60px
  left 80px
  &:before
    color #fff
    color rgba(255,255,255,0.9)
    font-size 120px
