.your-progress
  .your-progress-bar
    height 16px
    position relative
    background none repeat scroll 0% 0% #D8D8D8
    border-radius 40px
    padding 10px
    float right
    width 45%
    margin-top 0.83em

    span
      position absolute
      top 0
      left 0
      display block
      overflow hidden
      height 100%
      border-radius 40px
      background-color #C1EB96

  ul
    list-style none
    padding 0

    li
      display inline-block
      margin-right 2.5%
      height 500px
      width 17%

      .striped
        width 100%
        height 40%
        background repeating-linear-gradient(45deg, #B6B6B6, #B6B6B6 1%, #fff 1%, #fff 50%)
        background-size 10px 10px


      .solid
        width 100%
        height 50%
        background-image linear-gradient(top, rgba(0,0,0,0.1), #FFFFFF)
