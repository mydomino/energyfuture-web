.your-progress
  .your-progress-header
    margin-bottom 50px
    .your-progress-bar
      height 16px
      position relative
      background none repeat scroll 0% 0% #D8D8D8
      border-radius 40px
      padding 10px
      float right
      width 45%
      margin-top 0.83em

      span
        position absolute
        top 0
        left 0
        display block
        overflow hidden
        height 100%
        border-radius 40px
        background-color #C1EB96

  ul.guides-upper
    margin 25px 0 0 0
    height 250px
    list-style none
    padding 0
    li
      display inline-block
      height 100%
      margin-right 2.5%
      width 17%
      .guide-progress
        width 100%
        height 100%
        position relative

        .striped
          width 100%
          background repeating-linear-gradient(to top right, #B6B6B6, #B6B6B6 1%, #fff 1%, #fff 50%)
          background-size 10px 10px
          bottom 0
          position absolute

          .guide-progress-text
            color #272B2C
            opacity 0.54
            right 0
            bottom 5px
            position absolute
            top -30px

        .guide-progress-completed
          position: absolute
          bottom 0
          width 100%
          background-color #C1EB96

        .category-name
          text-transform capitalize
          position absolute
          bottom 5px
          left 0.6em
          font-weight bold

  .guide-list
    margin-top 0
    display inline-block
    font-size 1em
    background-image linear-gradient(to bottom, rgba(0,0,0,0.1), #FFFFFF)
    float left

    width 17%
    margin-right 2.5%

    ul
      width 100%
      list-style none
      padding-left 0.5em
      li
        width 80%
        background-image none
        line-height 0.8em
        margin-bottom 1em

        &:hover
          color: dimgrey
          cursor: pointer

        .item-point
          font-size 1.4em
          &:before
            content "\0025A1"

        .item-text
          font-size 0.9em
          margin-left 3px
