.your-progress
  .your-progress-bar
    height 16px
    position relative
    background none repeat scroll 0% 0% #D8D8D8
    border-radius 40px
    padding 10px
    float right
    width 45%
    margin-top 0.83em

    span
      position absolute
      top 0
      left 0
      display block
      overflow hidden
      height 100%
      border-radius 40px
      background-color #C1EB96

  ul
    list-style none
    padding 0

    li
      display inline-block
      margin-right 2.5%
      width 17%

      .guide-progress
        text-align right
        color #272B2C
        opacity 0.54

      .guide-progress-col
        margin-top 5px
        height 500px

        .striped
          width 100%
          background repeating-linear-gradient(45deg, #B6B6B6, #B6B6B6 1%, #fff 1%, #fff 50%)
          background-size 10px 10px
          position relative

          .category-name
            position absolute
            bottom 5px
            left 0.6em
            font-weight bold

        .solid
          width 100%
          height 50%
          background-image linear-gradient(top, rgba(0,0,0,0.1), #FFFFFF)
          position relative

          ul
            position absolute
            top 5px
            left 0.6em

            li
              width 75%
              font-size 1em

              .item-point
                font-size 1.4em
                &:before
                  content "\0025A1"

              .item-text
                font-size 0.9em
                margin-left 3px
