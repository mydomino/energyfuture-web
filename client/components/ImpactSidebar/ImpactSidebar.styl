@require './mixins/colors'

.impact-sidebar
  width 130px
  font-size 0.8em
  text-align center
  position absolute

  a
    color inherit
    cursor pointer
    text-decoration none

    > span
      color grey
      text-decoration underline

  .icon
    display block
    font-size 3.5em
    margin-bottom .2em

  hr
    width 40%
    margin 20px auto
    padding 0
    border 1px solid #e0e0e0

  .impact-score
    margin-bottom -20px;
    display inline-block;

  .action-button
    color grey

  .action-button.active
    color inherit
    font-weight bold

    a > span
      color inherit
      text-decoration none

  .action-button.disabled
    color lightgrey
