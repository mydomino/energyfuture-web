.guide-module-yelp
  ul.yelp-list
    list-style none
    padding 0

    li.yelp-main
      margin 0
      display inline-block
      border-bottom 1px solid #e5e5e1
      padding-bottom 17px
      &:last-child
        border-bottom none
        padding-top 17px

      .yelp-media-block
        .yelp-media-avatar
          display inline-block
          margin-right 12px

          a
            text-decoration none
            img
              outline none
              border-radius 4px
              vertical-align middle

        .yelp-media-story
          display inline-block

          h3
            margin-bottom 3px
            font-weight normal

        .yelp-address-block
          display inline-block

        .yelp-review-snippet-container
          float left
          .yelp-review-snippet
            position relative
            margin-top 20px
            img
              outline none
              border-radius 4px
              vertical-align middle
              width 30px
              height 30px
