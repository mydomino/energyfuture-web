.guide-module-yelp
  .yelp-main
    width 100%

  ul
    list-style none
    padding 0
    li
      margin 0
      border-bottom 1px solid #e5e5e1
      padding-bottom 17px
      &:last-child
        border-bottom none
        padding-top 17px

  .yelp-media-block .yelp-media-avatar
    margin-right 12px

    a
      text-decoration none
      img
        outline none
        border-radius 4px
        vertical-align middle

  .yelp-media-block
    .yelp-media-avatar
      float left
    .yelp-media-story
      h3
        margin-bottom 3px
        font-weight normal
