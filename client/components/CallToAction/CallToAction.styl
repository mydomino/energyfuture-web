.guide-actions
  margin-top 25px
  text-align center
  .action
    display inline-block
    width 30%
    margin-left 3%
    padding 20px
    border-radius 20px
    background linear-gradient(#FFF, #D7D7D7)
    box-shadow 0 0 8px 3px #B0A7A7
    vertical-align top
    &:first-child
      margin-left 0
    p
      margin 0
    .action-title
      color #272B2C
      margin 0
      font-size 2em
    .action-option
      margin-top 20px
      .option-title
        color #272B2C
        margin 5px 0 0 0
        font-weight bold
      .option-description
        font-size 14px
        margin-top 10px
        color rgba(#272B2C, 0.5)
      .option-reference
        display block
        margin-top 15px
        color black
        text-decoration underline
