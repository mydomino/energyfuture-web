@require '../../css/mixins/colors'

zIndex = 1200

.modal
  position fixed
  top 0
  left 0
  right 0
  background-color highlight
  background-color rgba(highlight, 0.9)
  color #fff
  z-index zIndex
  transition min-height 0.5s
  animation-fill-mode both
  animation-duration 1s

  .modal-content-expanded
    transition all 1s
    text-align center
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)

    h2
      margin-bottom 20px
      font-size 3em
    p
      margin-top 0
      margin-bottom 20px
      font-size 2em
    .btn
      display inline-block
      background-color #fff
      border-radius 30px
      padding 10px 20px
      margin 0 10px
      color highlight

  .modal-close
    position absolute
    top 5px
    right 10px
    font-size 1.4em
    cursor pointer
    z-index zIndex + 1


  &.modal-expanded
    min-height 100%

    .modal-content-expanded
      opacity 1
      width 100%
