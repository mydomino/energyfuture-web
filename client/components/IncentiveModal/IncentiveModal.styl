.incentive-modal
  position fixed
  left 20%
  right 20%
  margin 0 auto
  top 50%

  .incentive
    display inline-block
    width 100%
    margin-left 3%
    padding 20px
    border-radius 20px
    background linear-gradient(#FFF, #D7D7D7)
    box-shadow 0 0 8px 3px #B0A7A7

    &:nth-child(3n+1)
      margin-left 0
    p
      margin 0
    .incentive-provider
      margin-top 5px
    .incentive-currency, .incentive-amount
      display inline-block
    .incentive-currency
      margin-right 2px
    .incentive-amount
      font-size 1.5em
      margin-top 10px
    .incentive-type
      margin-top -7px
      text-transform uppercase
      letter-spacing 1px
      font-size 0.8em
      font-weight bold
      color rgba(#272B2C, 0.4)
    .incentive-description
      margin-top 10px
      color rgba(#272B2C, 0.5)
    .incentive-reference
      display block
      margin-top 6px
      color black
      text-decoration underline

    .close-icon
      float right
      color #808080
