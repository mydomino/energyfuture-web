.guide-module-sortable-table
  table
    margin-top: 40px
    max-height: 500px
    display: block
    overflow: hidden
  th
    font-weight: normal
    font-size: 20px
  tbody
    td:not(:first-child)
      border-bottom: 1px solid #979797
    tr:last-child
      td
        border-bottom: none
  th,td
    padding: 20px 10px
  td:nth-child(1)
    font-weight: bold
  th:nth-child(even), td:nth-child(even)
    background-color: #D8D8D8
  .sortable-table-read-more
    display: none
    text-align: center
    margin-top: -150px;

  .read-more-mask
    height: 150px
    opacity: 0.9
    background linear-gradient(to bottom, rgba(#f8f8f8, 0.1), #f8f8f8)

  .read-more-button
    margin-top 40px
