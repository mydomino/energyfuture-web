.guide-module-faq
  .faq-list
    margin-top 0
    margin-left 2em

    dt
      margin 1em 0 0
      font-weight normal
      padding-left 1.2em
      cursor pointer

      &:first-child
        margin-top 0

      &.active
        font-weight bold

      &:before
        content: '\f0da'; /* FontAwesome char code inside the '' */
        font-family: FontAwesome; /* FontAwesome or whatever */
        display: inline-block;
        width: 1.2em; /* same as padding-left set on li */
        margin-left: -1.2em; /* same as padding-left set on li */

      &.active:before
        content: '\f0d7'

    dd
      display none
      line-height 1.5em
      margin .5em 0 2em
      padding-left 1.2em
      font-weight 300

      &.active
        display block
