.guide-module-leading-question
  .radio-results
    .radio-result
      margin-top 1em
      font-weight 300
      font-size 1.3em
      background whitesmoke
      border-radius 5px
      padding 5px

    .options
      width 50%
      margin 2em auto

      .option-button
        cursor pointer
        margin 0 0 0 0.5em
        float left

        .option-button-text
          font-size 14px
          width 10em
          text-align center

        .option-button-image
          width 12%
          display block
          margin 0 auto
          content: url("../img/radio-option-empty.svg")
          &.active
            content: url("../img/radio-option-complete.svg")

  .leading-question-content, .leading-question-question
    margin-top 0

  .leading-question-question
    font-weight 300
    font-size 1.2em

    &.radio
      text-align left

    &.bullet
      text-align left

  .leading-question-list
    margin-top 0

    dt
      margin-top 1em
      font-weight normal
      display list-item
      list-style-type disc
      margin-left 1em
      cursor pointer

      &:first-child
        margin-top 0

      &.active, &:hover
        font-weight bold

    dd
      display none
      margin-top 1em
      font-weight 300
      margin-left 2em

      &.active
        display block
