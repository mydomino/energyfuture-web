@require 'mixins/colors'

@keyframes flash
  0%, 50%, 100%
    opacity 1

  25%, 75%
    opacity 0

.auth-bar
  position absolute
  top: 0
  right: 0
  left: 0
  padding: .25em
  width: 100%
  background-color: highlight
  background-color: rgba(highlight, 0.9)
  color: #fff
  z-index 1200
  transition min-height 0.5s
  animation-fill-mode both
  animation-duration 1s

  &.get-attention
    animation-name flash

  p.auth-bar-content
    margin: 0
    line-height: 2em
    text-align: center
    a
      color: #fff
      text-decoration underline
      line-height 1em

  .auth-bar-content-expanded
    max-height 0px
    margin-top 0
    opacity 0
    overflow hidden
    transition all 1s

    text-align center
    h2
      margin-bottom 10px
    p
      margin-top 0
      margin-bottom 20px
    .btn
      display inline-block
      background-color #fff
      border-radius 30px
      padding 10px 20px
      margin 0 10px
      color highlight

.auth-bar-close
  position absolute
  top 5px
  right 10px
  font-size 1.4em
  cursor pointer

.auth-bar.auth-bar-expanded
  position fixed
  min-height 100%

  &.get-attention
    animation-name none

  .auth-bar-content
    opacity 0
  .auth-bar-content-expanded
    opacity 1
    max-height 500px
    margin-top 100px
