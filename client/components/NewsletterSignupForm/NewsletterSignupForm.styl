.newsletter-signup
  text-align center
  padding-bottom 2em

.newsletter-signup-title
  font-weight 100
  font-size 48px
  margin-bottom 0

.newsletter-signup-subtext
  font-size 24px
  color #999

.newsletter-signup-form
  font-weight 100

.newsletter-signup-input
  border 1px solid #fff
  border-radius 30px
  padding 15px 25px
  background-color #fff
  display inline-block
  margin-right 15px
  outline none

.newsletter-signup-button
  font-weight bold
  border-width 0
  background-color transparent
  outline none
  border-radius 30px
  padding 15px 25px

.newsletter-signup-notice
  padding 15px 0
