.newsletter-signup
  text-align center
  color #fff
  margin-bottom 3em

.newsletter-signup-title
  font-weight 100
  font-size 48px
  margin-bottom 0

.newsletter-signup-subtext
  font-size 24px

.newsletter-signup-form
  font-weight 100

.newsletter-signup-input
  border 4px solid #50E3C2
  border-radius 30px
  padding 15px 25px
  background-color transparent
  display inline-block
  margin-right 15px
  outline none

.newsletter-signup-button
  font-weight 100
  border-width 0
  background-color transparent
  outline none

.newsletter-signup-button:hover
  background-color rgba(255,255,255,0.1)
