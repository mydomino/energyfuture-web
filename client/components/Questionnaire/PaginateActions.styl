.questionnaire-paginate-actions
  margin 40px auto 0
  width 80%
  .previous, .next
    border-radius 23px
    padding 10px 50px
    border 1px solid rgba(#000000, 0.5)
    width 200px
    font-size 1.2em
    text-align center
    background none
    &:hover
      background black
      color white
      cursor pointer
    &:active
      outline none
    &.disabled
      border 1px solid rgba(#000000, 0.1)
      color rgba(#000000, 0.1)
      &:hover
        background none
        cursor default

  .previous
    float left
  .next
    float right
