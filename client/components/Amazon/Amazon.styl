.guide-module-amazon-products
  .product-link, .review-link
    text-decoration: none
    color black
    &:visited
      color #808080
  .product-importance-category
    font-weight 600
    text-transform capitalize
    margin-top 0.4em
    &.good
      color rgb(151, 203, 223)
    &.better
      color rgb(121, 194, 170)
    &.best
      color rgb(207, 118, 81)
  .product-item
    margin-top: 20px
    display: inline-block
    width: 27.659%
    margin-left: 7%
    vertical-align: top
    &:nth-child(3n+1)
      margin-left: 0
    img
      display: inline
  .product-creator-section
    font-weight: bold
    margin-bottom 0
  .product-creators
    margin-left: 5px
    text-decoration: underline
  .product-link
    display: block
  .product-image
    box-shadow: 0 3px 14px 1px rgba(0,0,0,0.5)
    max-width: 100%
    height 250px
    display block
    margin 0 auto
  .product-review-count
    margin-left: 10px
    font-size 14px

.guide-module-amazon-products
  .guide-module-carousel
    .product-item
      width: auto
